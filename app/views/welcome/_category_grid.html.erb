<% @categories.try(:each) do |cat| %>
    <figure class="effect-oscar  wowload fadeInUp img-normalizer">
        <%= cl_image_tag(cat.image, :crop=>"mpad") %>
        <figcaption>
            <h2><%= cat.name %></h2>
            <p><%= cat.description %><br>
            <%= link_to 'Больше', category_path(cat) %></p>            
        </figcaption>
    </figure>
<% end %>
